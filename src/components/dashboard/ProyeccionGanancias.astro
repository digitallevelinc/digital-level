---
// src/components/dashboard/ProyeccionGanancias.astro
---
<div class="p-4 rounded-xl border border-blue-500/30 bg-[#161a1e] hover:border-blue-500/60 transition-all shadow-lg flex flex-col h-full">
  
  <div class="flex justify-between items-center mb-4">
    <div>
      <span class="text-[10px] font-black uppercase tracking-widest text-blue-400">Proyección de Escenarios</span>
      <p class="text-[8px] text-gray-500 uppercase font-bold mt-0.5">Basado en volumen actual</p>
    </div>
    <div class="bg-blue-500/10 p-2 rounded-lg">
      <i class="fas fa-magic text-blue-500 text-xs"></i>
    </div>
  </div>

  <div class="mb-6">
    <div class="flex items-baseline gap-2">
      <span id="projected-profit-value" class="text-3xl font-mono font-bold text-white tracking-tighter">---</span>
      <span class="text-xs font-bold text-gray-600 uppercase">usdt</span>
    </div>
    <div class="flex items-center gap-2 mt-1">
      <span class="flex h-2 w-2 rounded-full bg-blue-500 animate-pulse"></span>
      <span id="projection-label" class="text-[9px] text-blue-500 font-black uppercase tracking-widest italic">Estimado 1 día</span>
    </div>
  </div>

  <div class="grid grid-cols-4 gap-1 mb-4">
    <button class="proj-time-btn active bg-blue-500 text-black text-[8px] font-black py-1 rounded uppercase transition-all" data-days="1">1D</button>
    <button class="proj-time-btn bg-white/5 text-gray-400 text-[8px] font-black py-1 rounded border border-white/5 hover:bg-blue-500/20 uppercase" data-days="7">7D</button>
    <button class="proj-time-btn bg-white/5 text-gray-400 text-[8px] font-black py-1 rounded border border-white/5 hover:bg-blue-500/20 uppercase" data-days="15">15D</button>
    <button class="proj-time-btn bg-white/5 text-gray-400 text-[8px] font-black py-1 rounded border border-white/5 hover:bg-blue-500/20 uppercase" data-days="30">1M</button>
  </div>

  <div class="mt-auto pt-4 border-t border-white/5 space-y-2">
    <div class="flex justify-between items-center">
      <span class="text-[8px] text-gray-500 uppercase font-bold">Volumen Estimado</span>
      <span id="proj-vol-detail" class="text-[10px] font-mono text-gray-300 font-bold">---</span>
    </div>
    <div class="flex justify-between items-center">
      <span class="text-[8px] text-gray-500 uppercase font-bold">Confianza de Algoritmo</span>
      <span class="text-[10px] font-mono text-emerald-500 font-bold">94.2%</span>
    </div>
  </div>
</div>

<style>
  .proj-time-btn.active {
    box-shadow: 0 0 10px rgba(59, 130, 246, 0.4);
  }
</style>