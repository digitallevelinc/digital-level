---
// src/components/dashboard/comisiones.astro
---
<div class="bg-[#161a1e] border border-gray-800 rounded-2xl p-5 shadow-lg transition-all hover:border-[#F3BA2F]/20 group flex flex-col justify-between min-h-[220px]">
    <div>
        <div class="flex items-center gap-2 mb-2">
            <div class="p-1.5 bg-[#F3BA2F]/10 rounded-lg">
                <i class="fas fa-percentage text-[#F3BA2F] text-[10px]"></i>
            </div>
            <p class="sentinel-label text-[#F3BA2F]">Fee Balance Global</p>
        </div>
        <h3 id="fee-balance-total" class="sentinel-kpi-huge !text-3xl text-white mt-1">0.00 USDT</h3>
        <p class="text-[9px] text-gray-600 font-black uppercase tracking-[0.2em] mt-1 italic">Deducción acumulada</p>
    </div>

    <div class="space-y-3 mt-6 pt-4 border-t border-white/5">
        <div class="flex justify-between items-center bg-white/[0.02] p-2 rounded-lg">
            <span class="sentinel-label !text-[9px]">Total Ops con Comisión:</span>
            <span id="fee-ops-count" class="sentinel-value-md text-emerald-400 bg-emerald-400/10 px-2 py-0.5 rounded">0</span>
        </div>

        <div class="grid grid-cols-2 gap-3">
            <div class="bg-black/20 p-3 rounded-xl border border-white/5">
                <p class="text-[8px] text-rose-500 font-black uppercase tracking-tighter mb-1.5">Fees en Ventas</p>
                <div class="flex flex-col">
                    <span id="fee-sales-amount" class="sentinel-value-md text-white font-black text-[14px]">0.00</span>
                    <span class="text-[7px] text-gray-600 font-bold uppercase mt-0.5">
                        <span id="fee-sales-count">0</span> Operaciones
                    </span>
                </div>
            </div>

            <div class="bg-black/20 p-3 rounded-xl border border-white/5">
                <p class="text-[8px] text-emerald-500 font-black uppercase tracking-tighter mb-1.5">Fees en Compras</p>
                <div class="flex flex-col">
                    <span id="fee-buys-amount" class="sentinel-value-md text-white font-black text-[14px]">0.00</span>
                    <span class="text-[7px] text-gray-600 font-bold uppercase mt-0.5">
                        <span id="fee-buys-count">0</span> Operaciones
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>