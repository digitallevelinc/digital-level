---
// fiat.astro
import CardHelp from './CardHelp.astro';
---
<div id="fiat-balance-card" class="relative group min-h-[160px] bg-gray-900/50 rounded-xl p-4 border border-white/5 overflow-hidden">
    <div class="absolute -top-10 -right-10 w-32 h-32 bg-emerald-500/5 rounded-full blur-3xl group-hover:bg-emerald-500/10 transition-all duration-700"></div>

    <div class="flex justify-between items-start mb-4 relative z-10">
        <div>
            <p class="text-[12px] text-white-500 font-black uppercase tracking-[0.15em]">FIAT BALANCE</p>
            <h3 id="fiat-amount" class="text-4xl font-bold text-white mt-1">0.00 <span class="text-ls text-white-400 font-normal">VES</span></h3>
            
            <div class="flex items-center gap-1.5 mt-0.5 opacity-80">
                
                <span id="fiat-amount-usd" class="text-ls font-mono font-medium text-white-300 tracking-tight">0.00 USD</span>
            </div>
        </div>
        <div class="flex items-center gap-2">
            <CardHelp
                title="FIAT Balance"
                description="Consolida el balance FIAT de bancos y su equivalente aproximado en USD."
                calculation="Balance FIAT = saldo bancario actual del periodo. Volumen vendido y comprado se obtiene sumando montos FIAT de ventas y compras."
                notes={[
                    "El equivalente USD es referencial para comparar contra USDT.",
                    "Total operaciones sigue la suma compras + ventas."
                ]}
            />
            <i class="fas fa-university text-white/80"></i>
        </div>
        
    </div>

    <div id="fiat-details" class="space-y-3 border-t border-white/5 pt-4 relative z-10">
        <div class="flex justify-between items-center">
            <span class="text-rose-500/80 uppercase font-bold tracking-tight text-xs">Vendido (Cant):</span>
            <span id="fiat-withdrawal-count" class="text-rose-400 font-mono text-lm font-bold">N/A</span>
        </div>
        <div class="flex justify-between items-center">
            <span class="text-rose-500/80 uppercase font-bold tracking-tight text-xs">Volumen Vendido:</span>
            <span id="fiat-withdrawal-vol" class="text-rose-400 font-mono text-lm font-bold">N/A</span>
        </div>

        <div class="flex justify-between items-center">
            <span class="text-emerald-500/80 uppercase font-bold tracking-tight text-xs">Compras (Cant):</span>
            <span id="fiat-depo-count" class="text-emerald-400 font-mono text-lm font-bold">N/A</span>
        </div>
        <div class="flex justify-between items-center">
            <span class="text-emerald-500/80 uppercase font-bold tracking-tight text-xs">Volumen Comprado:</span>
            <span id="fiat-depo-vol" class="text-emerald-400 font-mono text-lm font-bold">N/A</span>
        </div>
    </div>

    <div class="mt-3 pt-2 border-t border-white/5 flex justify-between items-center relative z-10 text-[10px]">
        <span class="text-white-500 uppercase font-bold tracking-wide">Total Operaciones:</span>
        <div class="flex items-center gap-2">
            <span id="fiat-total-ops" class="text-lg text-white font-mono font-bold">0</span>
        </div>
    </div>

    
</div>
