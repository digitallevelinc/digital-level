---
// src/components/dashboard/bancos.astro
const banks = [
  { name: 'Mercantil', color: 'border-l-blue-600', id: 'mercantil' },
  { name: 'Banesco', color: 'border-l-green-600', id: 'banesco' },
  { name: 'BNC', color: 'border-l-orange-500', id: 'bnc' },
  { name: 'Provincial', color: 'border-l-blue-900', id: 'provincial' },
  { name: 'Pago Movil', color: 'border-l-yellow-500', id: 'pagomovil' },
  { name: 'Bancamiga', color: 'border-l-green-800', id: 'bancamiga' }
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  {banks.map(b => (
    <div class={`bg-[#161a1e] border border-gray-800 rounded-xl overflow-hidden border-l-4 ${b.color} p-4 shadow-lg shadow-black/20`}>
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-white font-black uppercase tracking-tighter text-xs italic">{b.name}</h3>
        <span id={`bank-profit-${b.id}`} class="text-[#F3BA2F] font-mono text-[10px] font-bold">0.00 USDT ≈ Profit</span>
      </div>

      <div class="grid grid-cols-2 gap-x-4 gap-y-3">
        <div class="space-y-1">
          <p class="text-[8px] text-gray-500 uppercase font-black">Balance FIAT</p>
          <p id={`bank-fiat-${b.id}`} class="text-white font-mono text-[10px]">0.00 VES</p>
        </div>
        <div class="space-y-1 text-right">
          <p class="text-[8px] text-gray-500 uppercase font-black">Balance USDT ≈</p>
          <p id={`bank-usdt-${b.id}`} class="text-white font-mono text-[10px]">0.00</p>
        </div>

        <div class="space-y-1 border-t border-white/5 pt-2">
          <p class="text-[8px] text-emerald-500/80 uppercase font-black italic">Tasa Compra</p>
          <p id={`bank-buy-${b.id}`} class="text-white font-mono text-[10px]">0.00</p>
        </div>
        <div class="space-y-1 border-t border-white/5 pt-2 text-right">
          <p class="text-[8px] text-rose-500/80 uppercase font-black italic">Tasa Venta</p>
          <p id={`bank-sell-${b.id}`} class="text-white font-mono text-[10px]">0.00</p>
        </div>

        <div class="bg-black/20 p-2 rounded-lg">
          <p class="text-[7px] text-emerald-400 uppercase font-bold">Comprado</p>
          <p id={`bank-vol-buy-${b.id}`} class="text-white font-mono text-[9px]">0.00</p>
          <div class="mt-1 border-t border-white/5 pt-1">
            <p class="text-[7px] text-emerald-400/60 uppercase font-bold text-[6px]">Fee Compra</p>
            <p id={`bank-fee-buy-${b.id}`} class="text-white/60 font-mono text-[8px]">0.00</p>
          </div>
        </div>

        <div class="bg-black/20 p-2 rounded-lg text-right">
          <p class="text-[7px] text-rose-400 uppercase font-bold">Vendido</p>
          <p id={`bank-vol-sell-${b.id}`} class="text-white font-mono text-[9px]">0.00</p>
          <div class="mt-1 border-t border-white/5 pt-1">
            <p class="text-[7px] text-rose-400/60 uppercase font-bold text-[6px]">Fee Venta</p>
            <p id={`bank-fee-sell-${b.id}`} class="text-white/60 font-mono text-[8px]">0.00</p>
          </div>
        </div>
      </div>

      <div class="mt-4 pt-2 border-t border-gray-800 flex justify-between items-center">
        <span class="text-[10px] font-bold px-2 py-0.5 rounded bg-emerald-500/10 text-emerald-400">
            Margen <span id={`bank-margin-${b.id}`}>0.00%</span>
        </span>
        <span class="text-[7px] text-gray-600 uppercase font-black">Sentinel Insight</span>
      </div>
    </div>
  ))}
</div>