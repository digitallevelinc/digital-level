---
const banks = [
  { name: 'Mercantil', color: 'border-l-blue-600', id: 'mercantil' },
  { name: 'Banesco', color: 'border-l-green-600', id: 'banesco' },
  { name: 'BNC', color: 'border-l-orange-500', id: 'bnc' },
  { name: 'BBVA/Provincial', color: 'border-l-blue-900', id: 'provincial' },
  { name: 'Bancamiga', color: 'border-l-green-800', id: 'bancamiga' },
  { name: 'BANK', color: 'border-l-yellow-500', id: 'bank' },
  { name: 'BBVABank', color: 'border-l-green-800', id: 'bbvabank' }
];
---

<div id="banks-grid" class="grid grid-cols-1 gap-6 items-start">
  {banks.map(b => (
    <div id={`card-${b.id}`} class={`bg-[#161a1e] border border-gray-800 rounded-2xl overflow-hidden border-l-[6px] ${b.color} shadow-xl flex flex-col transition-all hover:border-emerald-500/30 group`}>
      
      {/* 1. HEADER & PROFIT (CON ESTRELLA) */}
      <div 
        class="p-4 border-b border-white/5 flex justify-between items-center bg-black/20 cursor-pointer hover:bg-white/5 transition-colors"
        onclick={`toggleCard('${b.id}')`}
      >
        <div class="flex items-center gap-3">
          <button 
            onclick={`event.stopPropagation(); toggleFavorite('${b.id}')`}
            id={`fav-${b.id}`}
            class="text-gray-600 hover:text-yellow-400 transition-colors focus:outline-none"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 fill-current" viewBox="0 0 24 24">
              <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
            </svg>
          </button>
          <h3 class="sentinel-title !text-lg">{b.name}</h3>
        </div>
        <div class="flex items-center gap-4">
             <span id={`bank-profit-${b.id}`} class="text-[#F3BA2F] font-mono text-[15px] font-black tracking-tighter">0.00 USDT ≈ Profit</span>
             <i id={`chevron-${b.id}`} class="fas fa-chevron-down text-gray-500 transition-transform duration-300"></i>
        </div>
      </div>

      <div id={`card-body-${b.id}`} class="grid grid-rows-[0fr] transition-[grid-template-rows] duration-300 ease-out">
        <div class="overflow-hidden">
            <div class="p-5 space-y-5 flex-grow">
                
                {/* 2. BALANCES & BREAKEVEN (IGUAL) */}
                <div class="grid grid-cols-2 gap-4">
                <div class="space-y-3">
                    <div class="bg-white/[0.02] p-3 rounded-xl border border-white/5 shadow-inner">
                    <p class="sentinel-label !text-xs mb-1">Balance FIAT</p>
                    <p id={`bank-fiat-${b.id}`} class="sentinel-value-lg !text-[19px] truncate">0.00 VES</p>
                    </div>
                    <div class="bg-white/[0.02] p-3 rounded-xl border border-white/5 shadow-inner">
                    <p class="sentinel-label !text-xs mb-1">Balance USDT ≈</p>
                    <p id={`bank-usdt-${b.id}`} class="sentinel-value-lg !text-[19px] text-emerald-400">0.00</p>
                    </div>
                </div>
                <div class="bg-black/40 border border-white/5 rounded-xl p-3 flex flex-col justify-between relative overflow-hidden min-h-[110px]">
                    <div class="text-center pb-1.5 border-b border-white/5">
                        <p class="text-[10px] text-rose-400 font-black uppercase tracking-widest mb-1 opacity-80 text-left px-1">Techo (-0.5%)</p>
                        <p id={`bank-breakeven-${b.id}`} class="text-[20px] font-black text-white leading-none tracking-tighter">0.00</p>
                    </div>
                    <div class="text-center pt-1.5">
                        <p class="text-[10px] text-emerald-400 font-black uppercase tracking-widest mb-1 opacity-80 text-left px-1">Ideal (-1.0%)</p>
                        <p id={`bank-ideal-${b.id}`} class="text-[20px] font-black text-white leading-none tracking-tighter">0.00</p>
                    </div>
                    <div class="mt-2 text-center">
                        <span id={`bank-be-info-${b.id}`} class="text-[10px] px-2 py-0.5 rounded-full bg-white/5 text-gray-500 font-bold uppercase tracking-tighter">Esperando...</span>
                    </div>
                </div>
                </div>

                {/* 3. RECOMPRA & BUYING POWER (IGUAL) */}
                <div class="bg-black/20 p-4 rounded-xl border border-white/5">
                <div class="flex justify-between text-xs uppercase font-black mb-2.5">
                    <span class="text-gray-400 italic tracking-widest text-[11px]">Estado de Recompra</span>
                    <span id={`bank-cycle-text-${b.id}`} class="text-[#F3BA2F] text-sm">0%</span>
                </div>
                <div class="w-full h-4 bg-gray-900 rounded-full flex overflow-hidden border border-white/10 shadow-inner">
                    <div id={`bank-bar-recompra-${b.id}`} class="h-full bg-gray-600/40 transition-all duration-1000"></div>
                    <div id={`bank-bar-comprado-${b.id}`} class="h-full bg-[#F3BA2F] transition-all duration-1000"></div>
                    <div id={`bank-bar-profit-${b.id}`} class="h-full bg-emerald-500 transition-all duration-1000"></div>
                </div>
                <div class="flex justify-end mt-3 px-1">
                    <div class="text-right">
                    <p class="sentinel-label !text-[11px] opacity-80">Operaciones:</p>
                    <p id={`bank-ops-count-${b.id}`} class="text-white font-mono text-[15px] font-bold mt-1 tracking-tight">0 / 1k</p>
                    </div>
                </div>
                </div>

                {/* 4. BLOQUE TRF (TRANSFERENCIAS) */}
                <div class="bg-yellow-500/[0.03] border border-yellow-500/10 rounded-xl overflow-hidden shadow-inner">
                <div class="bg-yellow-500/10 px-4 py-2.5 flex justify-between items-center border-b border-yellow-500/10">
                    <div class="flex items-center gap-2">
                        <div class="w-2 h-2 bg-[#F3BA2F] rounded-full animate-pulse shadow-[0_0_5px_rgba(243,186,47,0.5)]"></div>
                        <span class="text-xs font-black text-[#F3BA2F] uppercase tracking-[0.15em]">Transferencias</span>
                    </div>
                    <span id={`bank-tr-ops-${b.id}`} class="text-xs font-mono font-bold text-[#F3BA2F]">0 OPS</span>
                </div>
                <div class="grid grid-cols-2 gap-4 bg-black/10 p-4 rounded-xl border border-white/[0.03]">
                <div class="space-y-3 border-r border-white/10 pr-4">
                    <div class="flex justify-between items-center">
                    <span class="text-rose-500 font-black uppercase tracking-wide text-xs">Venta TRF</span>
                    <span id={`bank-sell-${b.id}`} class="text-white font-mono font-bold text-xl">0.00</span>
                    </div>
                    <div class="flex flex-col bg-black/30 p-3 rounded-lg border border-white/5 relative">
                    <span class="sentinel-label !text-[11px] font-black mb-1 opacity-60 uppercase">Vendido</span>
                    <span id={`bank-vol-sell-${b.id}`} class="text-white font-mono text-sm font-bold truncate">0.00 VES</span>
                    <div class="flex justify-between items-center mt-2 border-t border-white/5 pt-2">
                        <span class="text-xs text-rose-400 font-bold uppercase">Fee:</span>
                        <span id={`bank-fee-sell-${b.id}`} class="text-sm text-rose-400 font-mono font-bold">0.00</span>
                    </div>
                    </div>
                </div>
                <div class="space-y-3 pl-4">
                    <div class="flex justify-between items-center">
                    <span class="text-emerald-500 font-black uppercase tracking-wide text-xs">Compra TRF</span>
                    <span id={`bank-buy-${b.id}`} class="text-white font-mono font-bold text-xl">0.00</span>
                    </div>
                    <div class="flex flex-col bg-black/30 p-3 rounded-lg border border-white/5 relative">
                    <span class="sentinel-label !text-[11px] font-black mb-1 opacity-60 uppercase">Comprado</span>
                    <span id={`bank-vol-buy-${b.id}`} class="text-white font-mono text-sm font-bold truncate">0.00 VES</span>
                    <div class="flex justify-between items-center mt-2 border-t border-white/5 pt-2">
                        <span class="text-xs text-emerald-400 font-bold uppercase">Fee:</span>
                        <span id={`bank-fee-buy-${b.id}`} class="text-sm text-emerald-400 font-mono font-bold">0.00</span>
                    </div>
                    </div>
                </div>
                </div>
                </div>

                {/* 5. BLOQUE PAGO MOVIL */}
                <div class="mt-4 bg-purple-500/[0.03] border border-purple-500/10 rounded-xl overflow-hidden shadow-inner">
                    <div class="bg-purple-500/10 px-4 py-2.5 flex justify-between items-center border-b border-purple-500/10">
                        <div class="flex items-center gap-2">
                            <div class="w-2 h-2 bg-purple-400 rounded-full animate-pulse shadow-[0_0_5px_rgba(192,132,252,0.5)]"></div>
                            <span class="text-xs font-black text-purple-400 uppercase tracking-[0.15em]">Pago Móvil</span>
                        </div>
                        <span id={`bank-pm-ops-${b.id}`} class="text-xs font-mono font-bold text-purple-400">0 OPS</span>
                    </div>
                    <div class="grid grid-cols-2 gap-4 bg-black/10 p-4 rounded-xl border border-white/[0.03]">
                        <div class="space-y-3 border-r border-white/10 pr-4">
                            <div class="flex justify-between items-center">
                                <span class="text-rose-500 font-black uppercase tracking-wide text-xs">Venta PM</span>
                                <span id={`bank-sell-pm-${b.id}`} class="text-white font-mono font-bold text-xl">0</span>
                            </div>
                            <div class="flex flex-col bg-black/30 p-3 rounded-lg border border-white/5 relative">
                                <span class="sentinel-label !text-[11px] font-black mb-1 opacity-60 uppercase">Vendido</span>
                                <span id={`bank-vol-sell-pm-${b.id}`} class="text-white font-mono text-sm font-bold truncate">0.00 VES</span>
                                <div class="flex justify-between items-center mt-2 border-t border-white/5 pt-2">
                                    <span class="text-xs text-rose-400 font-bold uppercase">Fee:</span>
                                    <span id={`bank-fee-sell-pm-${b.id}`} class="text-sm text-rose-400 font-mono font-bold">0.00</span>
                                </div>
                            </div>
                        </div>
                        <div class="space-y-3 pl-4">
                            <div class="flex justify-between items-center">
                                <span class="text-emerald-500 font-black uppercase tracking-wide text-xs">Compra PM</span>
                                <span id={`bank-buy-pm-${b.id}`} class="text-white font-mono font-bold text-xl">0</span>
                            </div>
                            <div class="flex flex-col bg-black/30 p-3 rounded-lg border border-white/5 relative">
                                <span class="sentinel-label !text-[11px] font-black mb-1 opacity-60 uppercase">Comprado</span>
                                <span id={`bank-vol-buy-pm-${b.id}`} class="text-white font-mono text-sm font-bold truncate">0.00 VES</span>
                                <div class="flex justify-between items-center mt-2 border-t border-white/5 pt-2">
                                    <span class="text-xs text-emerald-400 font-bold uppercase">Fee:</span>
                                    <span id={`bank-fee-buy-pm-${b.id}`} class="text-sm text-emerald-400 font-mono font-bold">0.00</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {/* 6. FOOTER: VUELTAS & MARGEN (IGUAL) */}
                <div class="pt-4 border-t border-white/10 flex justify-between items-center mt-auto">
                <div id={`bank-ctot-container-${b.id}`} class="flex items-center gap-2 bg-emerald-500/10 px-4 py-2 rounded-xl border border-emerald-500/20 shadow-lg">
                    <span class="text-lg font-black text-emerald-400 leading-none" id={`bank-ctot-${b.id}`}>0</span>
                    <span class="text-[9px] font-black text-emerald-500/70 uppercase tracking-widest">Vueltas P2P</span>
                </div>
                <div id={`bank-margin-${b.id}`} class="bg-emerald-500/10 text-emerald-400 px-5 py-2 rounded-full border border-emerald-500/20 text-sm font-black shadow-lg">
                    0.00%
                </div>
                </div>
            </div>
        </div>
      </div>
    </div>
  ))}
</div>

<script is:inline>
  function toggleCard(id) {
    const body = document.getElementById(`card-body-${id}`);
    const chevron = document.getElementById(`chevron-${id}`);
    
    // Toggle grid state
    const isClosed = body.classList.contains('grid-rows-[0fr]');
    
    if (isClosed) {
      body.classList.remove('grid-rows-[0fr]');
      body.classList.add('grid-rows-[1fr]');
      chevron.style.transform = 'rotate(180deg)';
    } else {
      body.classList.remove('grid-rows-[1fr]');
      body.classList.add('grid-rows-[0fr]');
      chevron.style.transform = 'rotate(0deg)';
    }
  }

  function toggleFavorite(id) {
    const btn = document.getElementById(`fav-${id}`);
    const isFav = btn.classList.contains('text-yellow-400');
    
    if (isFav) {
      btn.classList.remove('text-yellow-400');
      btn.classList.add('text-gray-600');
    } else {
      btn.classList.add('text-yellow-400');
      btn.classList.remove('text-gray-600');
    }
    // Opcional: Guardar en localStorage
    const favorites = JSON.parse(localStorage.getItem('favBanks') || '[]');
    if (isFav) {
      const index = favorites.indexOf(id);
      if (index > -1) favorites.splice(index, 1);
    } else {
      favorites.push(id);
    }
    localStorage.setItem('favBanks', JSON.stringify(favorites));
  }
</script>