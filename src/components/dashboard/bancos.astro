---
const banks = [
  { name: 'Mercantil', color: 'border-l-blue-600', id: 'mercantil' },
  { name: 'Banesco', color: 'border-l-green-600', id: 'banesco' },
  { name: 'BNC', color: 'border-l-orange-500', id: 'bnc' },
  { name: 'Provincial', color: 'border-l-blue-900', id: 'provincial' },
  { name: 'Pago Movil', color: 'border-l-yellow-500', id: 'pagomovil' },
  { name: 'Bancamiga', color: 'border-l-green-800', id: 'bancamiga' },
  { name: 'BANK', color: 'border-l-yellow-500', id: 'bank' },
  { name: 'BBVABank', color: 'border-l-green-800', id: 'bbvabank' }
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {banks.map(b => (
    <div class={`bg-[#161a1e] border border-gray-800 rounded-2xl overflow-hidden border-l-[6px] ${b.color} shadow-xl flex flex-col transition-all hover:border-emerald-500/30`}>
      
      <div class="p-4 border-b border-white/5 flex justify-between items-center bg-black/20">
        <h3 class="text-white font-black uppercase text-[12px] italic tracking-widest">{b.name}</h3>
        <span id={`bank-profit-${b.id}`} class="text-[#F3BA2F] font-mono text-[12px] font-bold">0.00 USDT ≈ Profit</span>
      </div>

      <div class="p-4 space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div class="bg-white/[0.02] p-3 rounded-xl border border-white/5 shadow-inner">
            <p class="text-[9px] text-gray-500 uppercase font-black mb-1 tracking-tight">Balance FIAT</p>
            <p id={`bank-fiat-${b.id}`} class="text-white font-mono text-sm font-bold">0.00 VES</p>
          </div>
          <div class="bg-white/[0.02] p-3 rounded-xl border border-white/5 text-right shadow-inner">
            <p class="text-[9px] text-gray-500 uppercase font-black mb-1 tracking-tight">Balance USDT ≈</p>
            <p id={`bank-usdt-${b.id}`} class="text-white font-mono text-sm font-bold">0.00</p>
          </div>
        </div>

        <div class="bg-black/20 p-3 rounded-xl border border-white/5">
          <div class="flex justify-between text-[9px] uppercase font-black mb-2 tracking-tight">
            <span class="text-gray-400 italic">Estado de Recompra</span>
            <span id={`bank-cycle-text-${b.id}`} class="text-[#F3BA2F] text-[10px]">0%</span>
          </div>
          <div class="w-full h-2.5 bg-gray-900 rounded-full flex overflow-hidden border border-white/10 shadow-inner">
            <div id={`bank-bar-recompra-${b.id}`} class="h-full bg-gray-600 transition-all duration-1000"></div>
            <div id={`bank-bar-comprado-${b.id}`} class="h-full bg-[#F3BA2F] transition-all duration-1000 shadow-[0_0_12px_#F3BA2F/40]"></div>
            <div id={`bank-bar-profit-${b.id}`} class="h-full bg-emerald-500 transition-all duration-1000"></div>
          </div>
          <div class="flex justify-between mt-2.5">
             <div class="text-left">
               <p class="text-[8px] text-emerald-500 uppercase font-black tracking-tighter italic">Poder Recompra:</p>
               <p id={`bank-buying-power-${b.id}`} class="text-emerald-400 font-mono text-[10px] font-bold mt-0.5 tracking-tight">≈ 0.00 USDT</p>
             </div>
             <div class="text-right">
               <p class="text-[8px] text-gray-500 uppercase font-black tracking-tighter">Operaciones:</p>
               <p id={`bank-ops-count-${b.id}`} class="text-white font-mono text-[10px] font-bold mt-0.5 tracking-tight">0 / 1k</p>
             </div>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4 text-[10px] bg-black/10 p-2.5 rounded-xl border border-white/[0.03]">
          <div class="space-y-2.5 border-r border-white/10 pr-2.5">
            <div class="flex justify-between items-center">
              <span class="text-rose-500 font-black uppercase italic text-[8px]">Tasa Venta</span>
              <span id={`bank-sell-${b.id}`} class="text-white font-mono font-bold text-[11px]">0.00</span>
            </div>
            <div class="flex flex-col bg-black/30 p-2 rounded-lg border border-white/5">
              <span class="text-gray-500 font-bold uppercase text-[7px] mb-1 tracking-widest">Vendido</span>
              <span id={`bank-vol-sell-${b.id}`} class="text-white font-mono text-[10px] font-bold truncate">0.00 VES</span>
            </div>
            <div class="flex justify-between items-center opacity-70">
              <span class="text-gray-600 font-bold uppercase text-[7.5px]">Fee Venta</span>
              <span id={`bank-fee-sell-${b.id}`} class="text-rose-400 font-mono font-black italic">0.00</span>
            </div>
          </div>

          <div class="space-y-2.5 pl-2.5">
            <div class="flex justify-between items-center">
              <span class="text-emerald-500 font-black uppercase italic text-[8px]">Tasa Compra</span>
              <span id={`bank-buy-${b.id}`} class="text-white font-mono font-bold text-[11px]">0.00</span>
            </div>
            <div class="flex flex-col bg-black/30 p-2 rounded-lg border border-white/5">
              <span class="text-gray-500 font-bold uppercase text-[7px] mb-1 tracking-widest">Comprado</span>
              <span id={`bank-vol-buy-${b.id}`} class="text-white font-mono text-[10px] font-bold truncate">0.00 VES</span>
            </div>
            <div class="flex justify-between items-center opacity-70">
              <span class="text-gray-600 font-bold uppercase text-[7.5px]">Fee Compra</span>
              <span id={`bank-fee-buy-${b.id}`} class="text-emerald-400 font-mono font-black italic">0.00</span>
            </div>
          </div>
        </div>

        <div class="pt-3.5 border-t border-white/10 flex justify-between items-center mt-auto">
          <div class="flex items-center gap-2">
             <div id={`bank-ctot-container-${b.id}`} class="flex items-center gap-1.5 bg-emerald-500/10 px-2 py-1 rounded-lg border border-emerald-500/20 shadow-lg">
                <span class="text-[11px] font-black text-emerald-400 leading-none" id={`bank-ctot-${b.id}`}>0</span>
                <span class="text-[7px] font-black text-emerald-500/70 uppercase tracking-tighter">Ciclos P2P</span>
             </div>
          </div>
          <div id={`bank-margin-${b.id}`} class="bg-emerald-500/10 text-emerald-400 px-4 py-1.5 rounded-full border border-emerald-500/20 text-[11px] font-black shadow-lg">
            0.00%
          </div>
        </div>

      </div>
    </div>
  ))}
</div>