---
interface Props {
  initialCapital: number;
  currentEquity: number;
  netProfit: number;
  totalRoi: number;
}

const { initialCapital, currentEquity, netProfit, totalRoi } = Astro.props;

const formatCurrency = (amount: number) => {
  return new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(amount);
};

const formatPercent = (val: number) => {
    return new Intl.NumberFormat('en-US', { style: 'percent', minimumFractionDigits: 2 }).format(val / 100);
}

const isPositive = currentEquity >= initialCapital;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
  <!-- Capital Inicial -->
  <div class="bg-gradient-to-br from-white/[0.03] to-transparent border border-white/5 p-5 rounded-2xl relative overflow-hidden group hover:border-white/10 transition-all">
    <div class="absolute right-0 top-0 p-3 opacity-10 group-hover:opacity-20 transition-opacity">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
    </div>
    <p class="text-[10px] font-black uppercase tracking-widest text-gray-500 mb-1">Inversión Inicial</p>
    <h3 id="inv-base-deposit" class="text-2xl font-mono text-white font-bold">{formatCurrency(initialCapital)}</h3>
    <div class="mt-2 text-[10px] text-gray-600 font-mono">Base del contrato</div>
  </div>

  <!-- Equity Actual -->
  <div class="bg-gradient-to-br from-[#3B82F6]/5 to-transparent border border-[#3B82F6]/10 p-5 rounded-2xl relative overflow-hidden group hover:border-[#3B82F6]/20 transition-all">
     <div class="absolute right-0 top-0 p-3 opacity-10 group-hover:opacity-20 transition-opacity">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-[#3B82F6]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
        </svg>
    </div>
    <p class="text-[10px] font-black uppercase tracking-widest text-[#3B82F6]/70 mb-1">Valor Actual (Equity)</p>
    <h3 id="inv-capital-total" class={`text-2xl font-mono font-bold ${isPositive ? 'text-white' : 'text-red-400'}`}>
        {formatCurrency(currentEquity)}
    </h3>
    <div class="mt-2 flex items-center gap-1">
        <span class={`text-[10px] px-1.5 py-0.5 rounded font-bold ${isPositive ? 'bg-[#3B82F6]/10 text-[#3B82F6]' : 'bg-red-500/10 text-red-500'}`}>
            {isPositive ? '▲ ACTIVO' : '▼ RIESGO'}
        </span>
    </div>
  </div>

  <!-- Profit Neto -->
  <div class="bg-gradient-to-br from-[#10B981]/5 to-transparent border border-[#10B981]/10 p-5 rounded-2xl relative overflow-hidden group hover:border-[#10B981]/20 transition-all">
    <div class="absolute right-0 top-0 p-3 opacity-10 group-hover:opacity-20 transition-opacity">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-[#10B981]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
    </div>
    <p class="text-[10px] font-black uppercase tracking-widest text-[#10B981]/70 mb-1">Ganancia Neta</p>
    <h3 id="inv-profit-neto" class="text-2xl font-mono text-[#10B981] font-bold">+{formatCurrency(netProfit)}</h3>
    <div class="mt-2 text-[10px] text-[#10B981]/60 font-mono">Ya descontadas comisiones</div>
  </div>

  <!-- ROI Total -->
  <div class="bg-gradient-to-br from-[#F59E0B]/5 to-transparent border border-[#F59E0B]/10 p-5 rounded-2xl relative overflow-hidden group hover:border-[#F59E0B]/20 transition-all">
     <div class="absolute right-0 top-0 p-3 opacity-10 group-hover:opacity-20 transition-opacity">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-[#F59E0B]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
    </div>
    <p class="text-[10px] font-black uppercase tracking-widest text-[#F59E0B]/70 mb-1">ROI Total</p>
    <h3 id="inv-roi" class="text-2xl font-mono text-[#F59E0B] font-bold">{formatPercent(totalRoi)}</h3>
    <div class="mt-2 flex items-center gap-1">
        <span class="text-[#F59E0B] text-xs">
            ▲ Tendencia Alcista
        </span>
    </div>
  </div>
</div>
