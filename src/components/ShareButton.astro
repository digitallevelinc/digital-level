---
/* Componente: Pestaña Lateral Digital Level - Gold Edition */
---

<div class="share-drawer-container">
  <button id="toggleShareMenu" class="share-tab-btn pulse-gold" aria-label="Share">
    <div class="tab-content">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="size-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.631 8.41m5.96 5.96a14.926 14.926 0 0 1-5.841 2.58m-.119-8.54a6 6 0 0 0-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 0 0-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 0 1-2.448-2.448 14.9 14.9 0 0 1 .06-.312m-2.24 2.39a4.493 4.493 0 0 0-1.757 4.306 4.493 4.493 0 0 0 4.306-1.758M16.5 9a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z" />
      </svg>
      <span class="tab-text">COMPARTIR</span>
    </div>
  </button>

  <div id="socialMenu" class="social-drawer">
    <a href="https://api.whatsapp.com/send?text=¡Mira%20las%20herramientas%20de%20Digital%20Level!%20Potencia%20tu%20P2P%20aquí:%20https://digitalevel.com/" target="_blank" class="drawer-item" title="WhatsApp">
        <img src="/img/wa.png" alt="WA" class="hover:scale-110 transition-transform" />
    </a>
    <a href="https://www.facebook.com/digitallevel" target="_blank" class="drawer-item" title="Facebook">
        <img src="/img/fb.png" alt="FB" class="hover:scale-110 transition-transform" />
    </a>
    <a href="https://www.instagram.com/digitallevelinc/" target="_blank" class="drawer-item" title="Instagram">
        <img src="/img/in.png" alt="IG" class="hover:scale-110 transition-transform" />
    </a>
    <a href="https://www.youtube.com/@DigitalLevelinc" target="_blank" class="drawer-item" title="Youtube">
        <img src="/img/yt.png" alt="IG" class="hover:scale-110 transition-transform" />
    </a>
  </div>
</div>

<style>
  .share-drawer-container {
    position: fixed;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    z-index: 99999; /* Z-index alto para estar sobre la calculadora */
    display: flex;
    align-items: center;
  }

  /* Gradiente alineado a la paleta Digital Level (Negro a Dorado Binance) */
  .share-tab-btn {
    background: linear-gradient(135deg, #0b0e11 0%, #F3BA2F 100%);
    color: white;
    border: 1px solid rgba(243, 186, 47, 0.3);
    border-left: none;
    padding: 16px 8px;
    border-radius: 0 12px 12px 0;
    cursor: pointer;
    box-shadow: 4px 0 20px rgba(0, 0, 0, 0.6);
    z-index: 1010;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .share-tab-btn:hover {
    padding-left: 12px;
    background: #F3BA2F;
    color: #000;
  }

  .pulse-gold {
    animation: gold-pulse 4s infinite;
  }

  @keyframes gold-pulse {
    0%, 100% { box-shadow: 4px 0 15px rgba(243, 186, 47, 0.2); }
    50% { box-shadow: 10px 0 25px rgba(243, 186, 47, 0.5); transform: translateY(0) translateX(4px); }
  }

  .tab-content { display: flex; flex-direction: column; align-items: center; gap: 10px; }
  .tab-text { 
    writing-mode: vertical-rl; 
    font-size: 11px; 
    font-weight: 900; 
    letter-spacing: 2px; 
    text-transform: uppercase;
  }

  .social-drawer {
    display: flex;
    flex-direction: column;
    gap: 15px;
    background: #181a20; /* Color exacto del fondo de cards de Binance/DigitaLevel */
    padding: 20px 12px;
    border-radius: 0 15px 15px 0;
    box-shadow: 15px 0 40px rgba(0,0,0,0.7);
    transform: translateX(-110%);
    opacity: 0;
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: 1px solid rgba(243, 186, 47, 0.2);
    border-left: none;
  }

  .social-drawer.active { transform: translateX(-2px); opacity: 1; }
  
  .drawer-item { 
    width: 32px; 
    height: 32px; 
    display: flex;
    align-items: center;
    justify-content: center;
    filter: grayscale(0.2) brightness(0.9);
    transition: all 0.3s ease;
  }

  .drawer-item:hover {
    filter: grayscale(0) brightness(1.1);
    transform: scale(1.2);
  }

  .drawer-item img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  
  @media (max-width: 768px) {
    .share-tab-btn { padding: 12px 6px; }
    .tab-text { font-size: 9px; }
    .share-drawer-container { top: 40%; } /* Un poco más arriba en móvil */
  }
</style>

<script>
  const btn = document.getElementById("toggleShareMenu");
  const menu = document.getElementById("socialMenu");
  
  btn?.addEventListener("click", (e) => {
    e.stopPropagation();
    menu?.classList.toggle("active");
  });

  // Cerrar al hacer click fuera
  document.addEventListener("click", (e) => {
    if (!menu?.contains(e.target as Node) && !btn?.contains(e.target as Node)) {
      menu?.classList.remove("active");
    }
  });
</script>