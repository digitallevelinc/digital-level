---
// src/components/Precios.astro
const tracks = [
  {
    title: "Plan Básico",
    price: "24.99",
    tag: "Básico", // Este tag es el que recibirá el modal
    description: "Control automatizado de tus operaciones personales. Olvida los registros manuales.",
    features: [
      "Acceso al Tracker (API)", 
      "Alertas Telegram/Discord", 
      "Balances Instantáneos",
      "Actividad Pay/Red/Switch",
      "Soporte por Email",
      "Auditoria Report"
    ],
    icon: "fa-seedling",
    color: "from-blue-500/20 to-transparent",
    popular: false
  },
  {
    title: "Business Pro",
    price: "49.99",
    tag: "Pro", // Simplificado para que coincida con el modal
    description: "La solución definitiva para dueños de mesas P2P que escalan con equipos de trabajo.",
    features: [
      "Todo lo del plan Básico", 
      "Gestión de Operadores Delegados", 
      "Reportes de Rendimiento P2P", 
      "Soporte Prioritario WhatsApp", 
      "Múltiples Cuentas API", 
      "Sincronización con Google Sheets"
    ],
    icon: "fa-user-tie",
    color: "from-[#F3BA2F]/20 to-transparent",
    popular: true
  },
  {
    title: "Mesa VIP",
    price: "99.99",
    tag: "VIP", // Simplificado para que coincida con el modal
    description: "Infraestructura institucional, participación en fondo y liquidez garantizada.",
    features: [
      "Todo lo del plan Pro", 
      "Participación en Fondo", 
      "Liquidez Inmediata (Retiro)", 
      "Asesoría Estratégica 1-1", 
      "Acceso a API Privada",
      "Política AML & Seguridad",
      "Maestría de Binance P2P" 
    ],
    icon: "fa-chart-line",
    color: "from-green-500/20 to-transparent",
    popular: false
  }
];
---

<section id="precios" class="py-24 bg-[#0b0e11] relative overflow-hidden border-t border-gray-800/50">
    <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-6xl font-black text-white mb-4 uppercase tracking-tighter">
                Escala tus <span class="text-[#F3BA2F]">Ganancias</span>
            </h2>
            <p class="text-gray-400 max-w-2xl mx-auto text-lg">
                Elige el nivel de potencia que tu operación P2P necesita hoy mismo.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {tracks.map(item => (
                <div class={`relative bg-[#1e2329] border ${item.popular ? 'border-[#F3BA2F]' : 'border-gray-800'} p-8 rounded-3xl hover:border-[#F3BA2F]/50 transition-all group overflow-hidden flex flex-col shadow-2xl`}>
                    
                    {item.popular && (
                        <div class="absolute top-0 right-0 bg-[#F3BA2F] text-black text-[10px] font-black px-4 py-1 rounded-bl-xl uppercase tracking-widest z-20">
                            Recomendado
                        </div>
                    )}

                    <div class={`absolute inset-0 bg-gradient-to-br ${item.color} opacity-10 group-hover:opacity-20 transition-opacity`}></div>
                    
                    <div class="relative z-10 flex-grow">
                        <div class="flex justify-between items-start mb-6">
                            <span class="text-[10px] font-bold tracking-[0.2em] text-[#F3BA2F] uppercase bg-[#F3BA2F]/10 px-3 py-1 rounded-full inline-block">
                                {item.tag}
                            </span>
                            <div class="text-3xl text-white/20 group-hover:text-[#F3BA2F] group-hover:scale-110 transition-all duration-500">
                                <i class={`fas ${item.icon}`}></i>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <span class="text-4xl md:text-5xl font-black text-white tracking-tighter">${item.price}</span>
                            <span class="text-gray-500 text-[10px] font-bold uppercase tracking-widest ml-1 opacity-70">
                                /mes
                            </span>
                        </div>
                        
                        <h3 class="text-xl font-bold text-white mb-4 uppercase tracking-tight">{item.title}</h3>
                        <p class="text-gray-400 text-sm leading-relaxed mb-6 italic min-h-[60px]">
                            "{item.description}"
                        </p>
                        
                        <ul class="space-y-3 mb-8">
                            {item.features.map(feat => (
                                <li class="text-gray-300 text-xs flex items-center gap-2">
                                    <i class="fas fa-check-circle text-[#F3BA2F]"></i> {feat}
                                </li>
                            ))}
                        </ul>
                    </div>

                    <button 
                        onclick={`window.openModal('${item.tag}')`}
                        class="relative z-10 w-full py-4 bg-white/5 border border-white/10 text-white rounded-xl font-bold text-center group-hover:bg-[#F3BA2F] group-hover:text-black transition-all uppercase text-xs tracking-widest shadow-xl active:scale-95"
                    >
                        Comenzar Ahora
                    </button>
                </div>
            ))}
        </div>
    </div>
</section>