---
import '../styles/global.css';
import SidebarMonitor from '../components/dashboard/SidebarMonitor.astro';
---
<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <link rel="icon" type="image/png" href="/img/logo.png" />
        <title>Dashboard | Digital Level</title>
        <!-- Google Fonts: Outfit -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    </head>
    <body class="bg-[#0b0e11] text-white min-h-screen font-sans selection:bg-[#F3BA2F]/30 overflow-x-hidden antialiased">
        
        <header class="sticky top-0 z-50 bg-[#0b0e11]/80 backdrop-blur-md border-b border-gray-800/50 px-4 py-3 md:px-8 md:py-4">
            <div class="w-full mx-auto flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <img src="/img/logo.png" class="w-8 h-8 md:w-10 md:h-10 object-contain" alt="Logo" />
                    <div class="flex flex-col">
                        <span class="text-[#F3BA2F] font-black text-sm md:text-base tracking-[0.2em] uppercase italic leading-none">
                            DIGITA LEVEL
                        </span>
                        <span class="text-[10px] text-white-500 uppercase font-bold tracking-widest mt-1 hidden md:block">
                            Sentinel Core v2.0
                        </span>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    
                </div>
            </div>
        </header>

        <SidebarMonitor />

        <main class="p-4 md:p-8 lg:p-10 w-full transition-all duration-500">
            <slot />
        </main>

        <footer class="p-8 text-center border-t border-gray-900 w-full">
            <p class="text-[12px] text-white font-black uppercase tracking-[0.3em] font-mono">
            &copy; <span id="year"></span> DIGITAL LEVEL Sentinel System
        </p>

        <script>
            document.getElementById('year').textContent = new Date().getFullYear();
        </script>
        </footer>
    </body>
</html>

<style is:global>
    :root {
        --font-sans: 'Outfit', system-ui, -apple-system, sans-serif;
    }
    body {
        font-family: var(--font-sans);
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    /* Tu sistema de tipograf√≠a mejorado (HD) */
    .sentinel-title { @apply text-[16px] font-black uppercase italic tracking-widest text-white; }
    .sentinel-label { @apply text-[12px] text-gray-500 uppercase font-black tracking-widest; }
    .sentinel-value-md { @apply text-[15px] font-mono font-bold text-white tracking-tighter; }
    .sentinel-value-lg { @apply text-[19px] font-mono font-bold text-white tracking-tighter; }
    .sentinel-kpi-huge { @apply text-5xl font-black text-emerald-400 tracking-tighter; }

    .card-help {
        position: relative;
        display: inline-flex;
        align-items: center;
        z-index: 30;
    }

    .card-help-trigger {
        width: 22px;
        height: 22px;
        border-radius: 999px;
        border: 1px solid rgba(243, 186, 47, 0.35);
        background: rgba(243, 186, 47, 0.12);
        color: #f3ba2f;
        font-size: 14px;
        font-weight: 900;
        line-height: 1;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .card-help-trigger:hover {
        border-color: rgba(243, 186, 47, 0.8);
        background: rgba(243, 186, 47, 0.25);
    }

    .card-help-popover {
        position: fixed;
        top: 0;
        left: 0;
        width: min(420px, calc(100vw - 20px));
        border: 1px solid rgba(243, 186, 47, 0.25);
        border-radius: 14px;
        background: rgba(11, 14, 17, 0.98);
        box-shadow: 0 20px 45px rgba(0, 0, 0, 0.55);
        padding: 14px 16px;
        opacity: 0;
        visibility: hidden;
        pointer-events: none;
        transform: translateY(-4px);
        transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s ease;
        z-index: 1500;
    }

    .card-help:hover .card-help-popover,
    .card-help:focus-within .card-help-popover,
    .card-help[data-open='true'] .card-help-popover {
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
        transform: translateY(0);
    }

    .card-help[data-open='true'] .card-help-trigger {
        border-color: rgba(243, 186, 47, 0.9);
        background: rgba(243, 186, 47, 0.3);
    }

    .card-help-title {
        color: #f3ba2f;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.13em;
        font-weight: 900;
    }

    .card-help-text,
    .card-help-calc {
        margin-top: 8px;
        color: rgba(255, 255, 255, 0.82);
        font-size: 14px;
        line-height: 1.45;
    }

    .card-help-calc strong {
        color: #f3ba2f;
        font-weight: 800;
    }

    .card-help-list {
        margin-top: 8px;
        color: rgba(255, 255, 255, 0.7);
        font-size: 13px;
        line-height: 1.45;
        padding-left: 18px;
        list-style: disc;
    }

    @media (max-width: 768px) {
        .card-help-trigger {
            width: 26px;
            height: 26px;
            font-size: 16px;
        }

        .card-help-popover {
            width: calc(100vw - 12px);
            max-width: none;
            border-radius: 16px;
            padding: 16px 18px;
        }

        .card-help-title {
            font-size: 14px;
            letter-spacing: 0.12em;
        }

        .card-help-text,
        .card-help-calc {
            font-size: 16px;
            line-height: 1.5;
        }

        .card-help-list {
            font-size: 15px;
            line-height: 1.5;
            padding-left: 20px;
        }
    }

    ::-webkit-scrollbar { width: 6px; height: 6px; }
    ::-webkit-scrollbar-track { background: #0b0e11; }
    ::-webkit-scrollbar-thumb { background: #1f2937; border-radius: 10px; }
    ::-webkit-scrollbar-thumb:hover { background: #F3BA2F; }

    html, body {
        width: 100%;
        max-width: 100%;
        overflow-x: hidden;
    }
</style>
