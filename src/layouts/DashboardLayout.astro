---
import '../styles/global.css';
import SidebarMonitor from '../components/dashboard/SidebarMonitor.astro';
---
<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <link rel="icon" type="image/png" href="/img/logo.png" />
        <title>Dashboard | Digital Level</title>
        <!-- Google Fonts: Outfit -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    </head>
    <body class="bg-[#0b0e11] text-white min-h-screen font-sans selection:bg-[#F3BA2F]/30 overflow-x-hidden antialiased">
        
        <header class="sticky top-0 z-50 bg-[#0b0e11]/80 backdrop-blur-md border-b border-gray-800/50 px-4 py-3 md:px-8 md:py-4">
            <div class="w-full mx-auto flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <img src="/img/logo.png" class="w-8 h-8 md:w-10 md:h-10 object-contain" alt="Logo" />
                    <div class="flex flex-col">
                        <span class="text-[#F3BA2F] font-black text-sm md:text-base tracking-[0.2em] uppercase italic leading-none">
                            DIGITA LEVEL
                        </span>
                        <span class="text-[10px] text-white-500 uppercase font-bold tracking-widest mt-1 hidden md:block">
                            Sentinel Core v2.0
                        </span>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    
                </div>
            </div>
        </header>

        <SidebarMonitor />

        <main class="p-4 md:p-8 lg:p-10 w-full transition-all duration-500">
            <slot />
        </main>

        <footer class="p-8 text-center border-t border-gray-900 w-full">
            <p class="text-[12px] text-white font-black uppercase tracking-[0.3em] font-mono">
            &copy; <span id="year"></span> DIGITAL LEVEL Sentinel System
        </p>

        <script>
            document.getElementById('year').textContent = new Date().getFullYear();
        </script>
        </footer>
    </body>
</html>

<style is:global>
    :root {
        --font-sans: 'Outfit', system-ui, -apple-system, sans-serif;
    }
    body {
        font-family: var(--font-sans);
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    /* Tu sistema de tipograf√≠a mejorado (HD) */
    .sentinel-title { @apply text-[16px] font-black uppercase italic tracking-widest text-white; }
    .sentinel-label { @apply text-[12px] text-gray-500 uppercase font-black tracking-widest; }
    .sentinel-value-md { @apply text-[15px] font-mono font-bold text-white tracking-tighter; }
    .sentinel-value-lg { @apply text-[19px] font-mono font-bold text-white tracking-tighter; }
    .sentinel-kpi-huge { @apply text-5xl font-black text-emerald-400 tracking-tighter; }

    ::-webkit-scrollbar { width: 6px; height: 6px; }
    ::-webkit-scrollbar-track { background: #0b0e11; }
    ::-webkit-scrollbar-thumb { background: #1f2937; border-radius: 10px; }
    ::-webkit-scrollbar-thumb:hover { background: #F3BA2F; }

    html, body {
        width: 100%;
        max-width: 100%;
        overflow-x: hidden;
    }
</style>