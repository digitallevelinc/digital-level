---
import '../styles/global.css';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/png" href="/img/logo.png" />
		<title>Dashboard | Digital Level</title>
	</head>
	<body class="bg-[#0b0e11] text-white min-h-screen font-sans">
		<header class="p-6 border-b border-gray-800/50 flex items-center justify-between">
			<div class="flex items-center gap-3">
				<img src="/img/logo.png" class="w-10 h-10 object-contain" alt="Logo" />
				<div class="flex flex-col">
					<span class="text-[#F3BA2F] font-black text-sm tracking-widest uppercase italic leading-none">DIGITAL LEVEL</span>
				</div>
			</div>
		</header>
		<main class="p-6 max-w-[1600px] mx-auto">
			<slot />
		</main>
	</body>
</html>