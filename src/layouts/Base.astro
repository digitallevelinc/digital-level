---
// src/layouts/Base.astro
import '../styles/global.css';

// Importamos los componentes globales para que salgan en TODAS las p√°ginas
import Footer from '../components/Footer.astro';
import WhatsAppBot from '../components/WhatsAppBot.astro';
import ShareDrawer from '../components/ShareButton.astro';
import SocialProofMini from '../components/SocialProofMini.tsx';

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es" class="bg-[#0b0e11] scroll-smooth">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="icon" type="image/png" sizes="32x32" href="/img/logo.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/img/logo.png" />
    <link rel="apple-touch-icon" href="/img/logo.png" />
</head>
<body class="text-white antialiased selection:bg-[#F3BA2F] selection:text-black min-h-screen flex flex-col">
    
    <div class="flex-grow">
        <slot />
    </div>

    <Footer />
    
    <ShareDrawer />
    <WhatsAppBot />
    <SocialProofMini client:idle />

    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>

    <script type="text/javascript">
      (function() {
        emailjs.init("u9CDgZGqG3T1dof5g");
      })();
    </script>
</body>
</html>