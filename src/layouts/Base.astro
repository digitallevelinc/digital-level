<body 
class="text-white antialiased selection:bg-[#F3BA2F] selection:text-black min-h-screen flex flex-col">
    <div class="flex-grow">
        <slot />
    </div>

    <Footer />
    
    <ShareDrawer />
    <WhatsAppBot />
    <SocialProofMini client:idle />

    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>

