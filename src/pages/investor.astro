import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Sentinel Investor Hub | Digital Level">
  <main class="min-h-screen text-white p-4 md:p-10">
    <div class="max-w-7xl mx-auto flex justify-between items-center mb-10">
      <div>
        <h1 class="text-2xl font-black italic uppercase tracking-tighter">Sentinel <span class="text-[#F3BA2F]">Investor Hub</span></h1>
        <p class="text-[10px] text-gray-500 font-mono uppercase">ID: #INV-2025-001 | <span id="inv-name" class="text-white">---</span> | <span id="inv-status" class="text-emerald-500 animate-pulse">Sincronizando con Binance...</span></p>
      </div>
      
      <div class="flex items-center gap-6">
        <div class="hidden md:block text-right">
          <p class="text-[9px] text-gray-500 uppercase font-black tracking-widest leading-none">Protocolo de Auditoría</p>
          <p class="text-xs font-bold text-white/80 italic">AES-256 SECURE NODE</p>
        </div>
        
        <button 
          id="logout-btn"
          class="bg-red-500/10 hover:bg-red-500/20 border border-red-500/20 text-red-500 text-[10px] font-black uppercase px-4 py-2 rounded-lg transition-all duration-300 flex items-center gap-2 group"
        >
          <span>Cerrar Sesión</span>
          <svg class="w-3 h-3 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
        </button>
      </div>
    </div>
    
