    </div> -->

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-gradient-to-br from-white/[0.05] to-transparent border border-white/5 p-6 rounded-2xl relative overflow-hidden">
        <span class="text-[10px] font-black text-white-500 uppercase tracking-widest">Equity Total (Cap + Profit)</span>
        
        <h2 id="inv-capital-total" class="text-4xl font-mono font-black mt-2 text-white">$0.00</h2>
        
        <div class="mt-3 flex items-center gap-2">
            <span class="text-[12px] font-bold text-white-500 uppercase tracking-tighter">Capital Inicial:</span>
            <span id="inv-base-deposit" class="text-ls font-mono text-white-400">$0.00</span>
        </div>

        
        </div>
      
      <div class="bg-gradient-to-br from-emerald-500/5 to-transparent border border-emerald-500/10 p-6 rounded-2xl">
        <span class="text-[10px] font-black text-emerald-500/50 uppercase tracking-widest">Net Profit Acumulado</span>
        <h2 id="inv-profit-neto" class="text-3xl font-mono font-black mt-2 text-emerald-400">+$0.00</h2>
      </div>

      <div class="bg-gradient-to-br from-[#F3BA2F]/5 to-transparent border border-[#F3BA2F]/10 p-6 rounded-2xl">
        <span class="text-[10px] font-black text-[#F3BA2F]/50 uppercase tracking-widest">ROI Actual</span>
        <h2 id="inv-roi" class="text-3xl font-mono font-black mt-2 text-[#F3BA2F]">0.00%</h2>
      </div>
    </div>

    <div class="bg-white/[0.02] border border-white/5 p-6 rounded-3xl shadow-2xl">
        <div class="flex justify-between items-center mb-6">
            <span class="text-[10px] font-black text-white-400 uppercase tracking-widest italic">Crecimiento de Capital por Ciclo</span>
            <span class="text-[10px] font-mono text-white-600">Actualización: Tiempo Real</span>
        </div>
        <div class="h-[350px] w-full">
            <canvas id="investorChart"></canvas>
        </div>
    </div>
  </main>
</DashboardLayout>

<script is:inline src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  // Logout Logic
  const logoutBtn = document.getElementById('logout-btn');
  if (logoutBtn) {
    logoutBtn.addEventListener('click', () => {
      localStorage.removeItem('auth_token');
      window.location.href = '/';
    });
  }
  import { updateInvestorDashboard } from '../scripts/investor-logic.js';
  
  const API_BASE = 'http://localhost:3003';
  const token = localStorage.getItem('auth_token');
  const FACTOR = 0.2; 

  // Inicialización del Gráfico
  const ctx = document.getElementById('investorChart');
  const chart = new Chart(ctx, {
      type: 'line',
      data: {
          labels: [],
          datasets: [{
              label: 'Crecimiento Equity',
              data: [2000, 2060, 2120, 2180, 2297], // Ejemplo escalonado
              borderColor: '#F3BA2F',
              backgroundColor: 'rgba(243, 186, 47, 0.05)',
              borderWidth: 3,
              stepped: true, // ESTO HACE QUE SEA ESCALONADO
              fill: true,
              tension: 0,
              pointRadius: 4,
              pointBackgroundColor: '#F3BA2F'
          }]
      },
      options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { display: false } },
          scales: {
              y: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: '#666', font: { family: 'monospace' } } },
              x: { grid: { display: false }, ticks: { color: '#666', font: { family: 'monospace' } } }
          }
      }
  });

  // Función global para actualizar el gráfico desde scripts externos
  window.updateInvestorChart = (history) => {
    if (!history || !Array.isArray(history)) return;
    
    chart.data.labels = history.map(h => {
        const d = new Date(h.date);
        return d.toLocaleDateString('es-ES', { day: '2-digit', month: 'short' });
    });
    chart.data.datasets[0].data = history.map(h => h.equity);
    chart.update();
  };

  if(token) {
    updateInvestorDashboard(API_BASE, token, FACTOR);
    setInterval(() => updateInvestorDashboard(API_BASE, token, FACTOR), 30000);
  }
</script>