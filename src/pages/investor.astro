---
// src/pages/investor.astro
import DashboardLayout from '../layouts/DashboardLayout.astro';
import InvestorStats from '../components/dashboard/investor/InvestorStats.astro';
import TransparencySection from '../components/dashboard/investor/TransparencySection.astro';
import ProfitStepChart from '../components/dashboard/investor/ProfitStepChart.astro';
import MonthlyPerformanceTable from '../components/dashboard/investor/MonthlyPerformanceTable.astro';
---

<DashboardLayout title="Sentinel Investor Hub | Digital Level">
  <main class="min-h-screen text-white p-4 md:p-10">
    <div class="max-w-7xl mx-auto flex justify-between items-center mb-10">
      <div>
        <h1 class="text-2xl font-black italic uppercase tracking-tighter">Sentinel <span class="text-[#F3BA2F]">Investor Hub</span></h1>
        <p class="text-[10px] text-gray-500 font-mono uppercase">ID: #INV-2025-001 | <span id="inv-name" class="text-white">---</span> | <span id="inv-status" class="text-emerald-500 animate-pulse">Sincronizando con Binance...</span></p>
      </div>
      
      <div class="flex items-center gap-6">
        <div class="hidden md:block text-right">
          <p class="text-[9px] text-gray-500 uppercase font-black tracking-widest leading-none">Protocolo de Auditoría</p>
          <p class="text-xs font-bold text-white/80 italic">AES-256 SECURE NODE</p>
        </div>
        
        <button 
          id="logout-btn"
          class="bg-red-500/10 hover:bg-red-500/20 border border-red-500/20 text-red-500 text-[10px] font-black uppercase px-4 py-2 rounded-lg transition-all duration-300 flex items-center gap-2 group"
        >
          <span>Cerrar Sesión</span>
          <svg class="w-3 h-3 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- KPI Cards Component -->
    <InvestorStats 
        initialCapital={0} 
        currentEquity={0} 
        netProfit={0} 
        totalRoi={0} 
    />

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
        
        <!-- Left Column: Chart & Transparency -->
        <div class="xl:col-span-2">
            <ProfitStepChart />
            <TransparencySection 
                participationRatio={0} 
                poolTotal={0} 
                grossProfit={0} 
                platformFee={0} 
                netProfit={0} 
            />
        </div>

        <!-- Right Column: History Table -->
        <div class="xl:col-span-1">
            <MonthlyPerformanceTable monthlyPerformance={[]} />
        </div>

    </div>

  </main>
</DashboardLayout>

<script>
  // Logout Logic
  const logoutBtn = document.getElementById('logout-btn');
  if (logoutBtn) {
    logoutBtn.addEventListener('click', () => {
      localStorage.removeItem('auth_token');
      window.location.href = '/';
    });
  }

  import { updateInvestorDashboard } from '../scripts/investor-logic.js';
  
  const API_BASE = 'http://localhost:3003'; // Consider moving to env var
  const token = localStorage.getItem('auth_token');

  if(token) {
    updateInvestorDashboard(API_BASE, token);
    // Poll every 30 seconds
    setInterval(() => updateInvestorDashboard(API_BASE, token), 30000);
  } else {
      // Redirect to login if no token
      window.location.href = '/';
  }
</script>