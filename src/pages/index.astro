---
// src/pages/index.astro
import Base from '../layouts/Base.astro';

// IMPORTANTE: Agregamos .tsx para que React no reciba un objeto de Astro
import Navbar from '../components/Navbar.tsx'; 

import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Precios from '../components/Precios.astro'; 
import Sincronizacion from '../components/Sincronizacion.astro'; 
import Guias from '../components/Guias.astro';
import About from '../components/About.astro';
import WhatsAppBot from '../components/WhatsAppBot.astro';
import RegistrationModal from '../components/RegistrationModal.astro';

// Importamos el Social Proof dinámico
import SocialProofMini from '../components/SocialProofMini.tsx';
---

<Base title="Digital Level | Arbitraje P2P Profesional">
    {/* Asegúrate de que Navbar sea el componente React con la directiva client */}
    <Navbar client:load />        
    
    <main>
        <Hero />                   
        <Features />
        <Precios /> 
        <Sincronizacion />                     
        <Guias />                      
        <About />
    </main>
    
    {/* Componentes Flotantes y Lógica */}
    <WhatsAppBot />     
    <RegistrationModal />
    <SocialProofMini client:idle />
</Base>