---
// Importaciones se mantienen intactas
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import StatCard from '../../components/dashboard/StatCard.astro';
import Operaciones from '../../components/dashboard/operaciones.astro';
import Comisiones from '../../components/dashboard/comisiones.astro';
import P2P from '../../components/dashboard/p2p.astro';
import Pay from '../../components/dashboard/pay.astro';
import Red from '../../components/dashboard/red.astro';
import Switch from '../../components/dashboard/switch.astro';
import Fiat from '../../components/dashboard/fiat.astro';
import Bancos from '../../components/dashboard/bancos.astro';
import Ciclos from '../../components/dashboard/ciclos.astro';
import Profit from '../../components/dashboard/profit.astro';
import ComisionOperador from '../../components/dashboard/ComisionOperador.astro'; 
import ProyeccionGanancias from '../../components/dashboard/ProyeccionGanancias.astro';
import 'flatpickr/dist/flatpickr.min.css';
import 'flatpickr/dist/themes/dark.css';
---

<DashboardLayout>
  <!-- Protección de Ruta: Redirigir Inversores al Hub correcto -->
  <script is:inline>
    const userRole = localStorage.getItem('user_role');
    if (userRole === 'investor') {
      window.location.href = '/investor';
    }
  </script>
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 px-2 gap-4">
    <div>
      <h1 class="text-white font-black text-2xl md:text-3xl uppercase tracking-tighter">
        Bienvenido, <span id="operator-alias" class="text-[#F3BA2F]">Cargando...</span>
      </h1>
      <div class="flex flex-col gap-1 mt-2">
        <p id="last-update" class="text-[10px] text-gray-500 uppercase font-black tracking-[0.2em] italic">
          Sincronizando con Sentinel...
        </p>
        <p id="kpi-filter-label" class="text-[10px] text-emerald-500/80 uppercase font-black tracking-widest">
          Rango activo: Hoy
        </p>
      </div>
    </div>
    
        

    <div class="flex items-center gap-3 w-full md:w-auto bg-[#1e2329]/20 p-2 rounded-2xl border border-white/5 backdrop-blur-sm">
    
  

    <a 
        id="link-p2p-sheet" 
        href="#" 
        target="_blank" 
        class="flex items-center justify-center w-11 h-11 rounded-xl bg-emerald-500/5 border border-emerald-500/10 text-emerald-500 hover:bg-emerald-500/20 hover:border-emerald-500/40 transition-all duration-300 group shadow-lg"
        title="Abrir Google Sheet P2P"
    >
        <svg class="w-6 h-6 transition-transform group-hover:scale-110" viewBox="0 0 24 24" fill="currentColor">
            <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2zM19 20H5V4h8v4h6v12zM7 18h10v-2H7v2zm0-4h10v-2H7v2zm0-4h10V8H7v2z" />
        </svg>
    </a>

    <div class="w-px h-6 bg-white/10 mx-1 hidden md:block"></div>
    
    <button 
        id="logout-btn" 
        class="flex-1 md:flex-none h-11 px-6 rounded-xl bg-red-500/5 border border-red-500/10 text-red-500 hover:bg-red-500/20 hover:border-red-500/40 text-[10px] font-black transition-all duration-300 uppercase tracking-[0.2em] shadow-lg active:scale-95"
    >
        Cerrar Sesión
    </button>
</div>

  </div>

  <section class="mb-10 bg-gradient-to-br from-[#0f1216] to-[#0b0d11] border border-gray-800 rounded-2xl p-6 shadow-xl shadow-black/40">
    <div class="flex items-center gap-3 mb-5">
      <span class="w-1.5 h-5 bg-[#F3BA2F]"></span>
      <p class="text-[11px] font-black uppercase tracking-[0.3em] text-gray-300">Filtro temporal KPI</p>
    </div>

    <div class="flex overflow-x-auto pb-4 gap-3 mb-8 scrollbar-hide" id="kpi-preset-group">
      {[
        { id: 'today', label: 'Hoy' },
        { id: 'yesterday', label: 'Ayer' },
        { id: 'this_week', label: 'Esta semana' },
        { id: 'last_7', label: 'Últimos 7 días' },
        { id: 'this_month', label: 'Mes actual' },
        { id: 'last_30', label: 'Últimos 30 días' },
        { id: 'all', label: 'Todo' }
      ].map((preset) => (
        <button 
          class="kpi-preset-btn whitespace-nowrap px-6 py-3 rounded-xl text-[11px] font-black uppercase border border-gray-800 bg-white/5 hover:border-[#F3BA2F]/60 hover:text-[#F3BA2F] transition-all shadow-md" 
          data-preset={preset.id}
        >
          {preset.label}
        </button>
      ))}
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <div class="space-y-2">
        <label class="sentinel-label px-1">Desde</label>
        <div class="relative group">
            <input id="kpi-date-from" type="text" placeholder="Seleccionar fecha..." class="bg-black text-white text-sm border border-white-700 p-4 pl-11 rounded-xl w-full outline-none focus:border-[#F3BA2F]/70 focus:bg-white/5 transition-all shadow-inner cursor-pointer" readonly />
            <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-500 group-hover:text-[#F3BA2F] transition-colors pointer-events-none">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
            </div>
        </div>
      </div>
      <div class="space-y-2">
        <label class="sentinel-label px-1">Hasta</label>
        <div class="relative group">
            <input id="kpi-date-to" type="text" placeholder="Seleccionar fecha..." class="bg-black text-white text-sm border border-white-700 p-4 pl-11 rounded-xl w-full outline-none focus:border-[#F3BA2F]/70 focus:bg-white/5 transition-all shadow-inner cursor-pointer" readonly />
            <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-500 group-hover:text-[#F3BA2F] transition-colors pointer-events-none">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
            </div>
        </div>
      </div>
      <div class="flex items-end">
        <button id="kpi-apply-range" class="bg-[#F3BA2F] text-black text-[12px] font-black py-4.5 px-4 rounded-xl w-full uppercase tracking-widest hover:bg-[#d9a927] transition-all shadow-lg shadow-[#F3BA2F]/20 active:scale-[0.98]">
          Actualizar Reporte
        </button>
      </div>
    </div>
  </section>

  <section class="mb-12">
    <h2 class="text-[#F3BA2F] text-[12px] font-black uppercase tracking-[0.3em] mb-6 italic flex items-center gap-3 px-2">
      <span class="w-1.5 h-4 bg-[#F3BA2F]"></span> 1. RENDIMIENTO DE OPERACIONES CRÍTICAS
    </h2>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
      <div class="lg:col-span-7 w-full">
        <Profit />
      </div>
      <div class="lg:col-span-5 w-full">
        <Ciclos />
      </div>
    </div>
  </section>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-12">
    <section>
      <h2 class="text-[#F3BA2F] text-[12px] font-black uppercase tracking-[0.3em] mb-6 italic flex items-center gap-3 px-2">
      <span class="w-1.5 h-4 bg-[#F3BA2F]"></span> 2. CONTROL DE OPERACIONES Y VOLUMEN
    </h2>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
        <Operaciones />
        <Comisiones />
      </div>
    </section>

    <section>
      
      <h2 class="text-[#F3BA2F] text-[12px] font-black uppercase tracking-[0.3em] mb-6 italic flex items-center gap-3 px-2">
      <span class="w-1.5 h-4 bg-[#F3BA2F]"></span> 4. PROYECCIONES E INSIGHTS
    </h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
        <ProyeccionGanancias />
        <ComisionOperador />
      </div>
    </section>
  </div>

  <section class="mb-12">
    
    <h2 class="text-[#F3BA2F] text-[12px] font-black uppercase tracking-[0.3em] mb-6 italic flex items-center gap-3 px-2">
      <span class="w-1.5 h-4 bg-[#F3BA2F]"></span> 3. LOGÍSTICA DE CARTERAS (BALANCES INTERNOS)
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <P2P />
      <Pay />
      <Red />
      <Switch />
      <Fiat />
    </div>
  </section>

  <section class="pb-28">
    <h2 class="sentinel-label mb-6 italic px-2 flex items-center gap-2">
      <h2 class="text-[#F3BA2F] text-[12px] font-black uppercase tracking-[0.3em] mb-6 italic flex items-center gap-3 px-2">
      <span class="w-1.5 h-4 bg-[#F3BA2F]"></span> 5. PANEL DE BANCOS (CONTROL DE VOLUMEN)
    </h2>
      </h2>
    <div class="w-full">
        <Bancos />
    </div>
  </section>
  <script>
    import { initDashboard } from '../../scripts/dashboard.js';
    initDashboard();
  </script>
  
</DashboardLayout>



<style>
  .scrollbar-hide::-webkit-scrollbar { display: none; }
  .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
  
  /* Ajuste para el alto del botón de aplicar */
  #kpi-apply-range {
    height: 58px;
  }
</style>
